<Window x:Class="MaaUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaaUpdater"
        mc:Ignorable="d"
        Title="MAA更新器" Height="220" Width="300" ResizeMode="CanMinimize" SizeToContent="Width">
    <Grid VerticalAlignment="Top">
        <TextBox x:Name="MaaPath" HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" VerticalAlignment="Top" Width="246" InputScope="FullFilePath" MaxLines="1"/>
        <Button x:Name="MaaPathChoose" Content="选择" Height="20" Margin="255,10,10,0" VerticalAlignment="Top" Width="35" HorizontalAlignment="Left" Click="MaaPathChoose_Click"/>
        <ScrollViewer Width="280" Height="150" VerticalAlignment="Top" Margin="10,45,10,0" VerticalScrollBarVisibility="Hidden">
            <TextBox x:Name="LogInfo" Height="150" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" BorderThickness="0,0,0,0" IsReadOnly="True"/>
        </ScrollViewer>
        <Button x:Name="StartUpdate" Content="开 始 更 新" HorizontalAlignment="Center" Height="60" Margin="0,105,0,0" VerticalAlignment="Top" Width="100" Click="StartUpdate_Click"/>
    </Grid>
</Window>
